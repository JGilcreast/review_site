<div id='users-new'>
  <%= form_tag('/login', :method => 'post', :id => 'login') do %>
  <h3 style='text-align:center'>Sign in</h3>
    <div class="form-group">
      <%= label_tag 'email' %>
      <%= text_field_tag 'email', nil, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= label_tag 'password' %>
      <%= password_field_tag 'password', nil, class: 'form-control'  %>
    </div>
    <%= submit_tag "Login", onclick: 'StopDoubleSubmit(this);'  %>
  <% end %>
  <%= form_for @user, :url => '/users' , :method => 'post', :html => {:id => "register"}, validate: true do |user| %>
  <h3 style='text-align:center'>Register a new account</h3>
    <div class="form-group">
      <%= user.label :name %>
      <%= user.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= user.label :email %>
      <%= user.text_field :email, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= user.label :password %>
      <%= user.password_field :password, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= user.label :password_confirmation, "Confirm Password" %>
      <%= user.password_field :password_confirmation, :class => 'form-control' %>
    </div>
    <div class="form-group"><div class='form-check'>
      <%= user.check_box :admin, :class => 'form-check-input' %>
      <%= user.label :admin, "Register as admin?", :class => 'form-check-label' %>
    </div></div>
    <%= user.submit "Register", onclick: 'StopDoubleSubmit(this);' %>
  <% end %>
</div>
